<script>
let currentOrderId = null;
let currentUserId = null;

// Tab switching
document.querySelectorAll('.tab').forEach(tab => {
    tab.addEventListener('click', () => {
        document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
        document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
        tab.classList.add('active');
        document.getElementById(tab.dataset.tab + '-tab').classList.add('active');
    });
});

function openApproveModal(orderId, userId, productName) {
    currentOrderId = orderId;
    currentUserId = userId;
    document.getElementById('approveProductName').textContent = 'üì¶ ' + productName;
    document.getElementById('productLink').value = '';
    document.getElementById('approveModal').classList.add('active');
    document.getElementById('productLink').focus();
}

function openRejectModal(orderId, productName) {
    currentOrderId = orderId;
    document.getElementById('rejectProductName').textContent = 'üì¶ ' + productName;
    document.getElementById('rejectReason').value = '';
    document.getElementById('rejectModal').classList.add('active');
}

function closeModal(modalId) {
    document.getElementById(modalId).classList.remove('active');
    currentOrderId = null;
    currentUserId = null;
}

function showToast(message, type = 'success') {
    const toast = document.getElementById('toast');
    toast.querySelector('.toast-icon').textContent = type === 'success' ? '‚úÖ' : '‚ùå';
    toast.querySelector('.toast-message').textContent = message;
    toast.className = 'toast ' + type + ' show';
    setTimeout(() => toast.classList.remove('show'), 3000);
}

function setButtonLoading(btn, loading) {
    btn.disabled = loading;
    btn.querySelector('.btn-text').style.display = loading ? 'none' : 'inline';
    btn.querySelector('.btn-loading').style.display = loading ? 'inline' : 'none';
}

async function submitApproval() {
    const productLink = document.getElementById('productLink').value.trim();
    if (!productLink) {
        showToast('Please enter the product link', 'error');
        return;
    }
    
    const btn = document.getElementById('approveBtn');
    setButtonLoading(btn, true);
    
    try {
        // Check DM first
        const checkRes = await fetch(`/api/staff/check-dm/${currentUserId}`);
        const checkData = await checkRes.json();
        
        if (!checkData.canDM) {
            showToast('User has DMs closed. Ask them to open DMs first.', 'error');
            setButtonLoading(btn, false);
            return;
        }
        
        const res = await fetch(`/api/staff/approve/${currentOrderId}`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ productLink })
        });
        const data = await res.json();
        
        if (data.success) {
            closeModal('approveModal');
            removeOrderCard(currentOrderId);
            updateStats();
            showToast('Order approved! Product sent to customer.');
        } else {
            showToast(data.error, 'error');
        }
    } catch (err) {
        showToast('Error processing order', 'error');
    }
    
    setButtonLoading(btn, false);
}

async function submitRejection() {
    const reason = document.getElementById('rejectReason').value.trim();
    const btn = document.getElementById('rejectBtn');
    setButtonLoading(btn, true);
    
    try {
        const res = await fetch(`/api/staff/reject/${currentOrderId}`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ reason })
        });
        const data = await res.json();
        
        if (data.success) {
            closeModal('rejectModal');
            removeOrderCard(currentOrderId);
            updateStats();
            showToast('Order rejected.');
        } else {
            showToast(data.error, 'error');
        }
    } catch (err) {
        showToast('Error processing order', 'error');
    }
    
    setButtonLoading(btn, false);
}

function removeOrderCard(orderId) {
    const card = document.querySelector(`.order-card[data-order-id="${orderId}"]`);
    if (card) {
        card.style.animation = 'fadeOut 0.3s ease forwards';
        setTimeout(() => card.remove(), 300);
    }
    
    // Show empty state if no more orders
    setTimeout(() => {
        const list = document.getElementById('pendingOrdersList');
        if (list.querySelectorAll('.order-card').length === 0) {
            list.innerHTML = `
                <div class="empty-state" id="emptyPending">
                    <span class="empty-icon">üì≠</span>
                    <h3>No pending orders</h3>
                    <p>New orders will appear here automatically</p>
                </div>
            `;
        }
    }, 350);
}

function updateStats() {
    const pendingCount = document.querySelectorAll('#pendingOrdersList .order-card').length;
    document.getElementById('pendingCount').textContent = pendingCount;
    document.getElementById('pendingBadge').textContent = pendingCount;
    
    // Update completed/rejected counts
    const completedCount = parseInt(document.getElementById('completedCount').textContent) || 0;
    document.getElementById('completedCount').textContent = completedCount + 1;
}

// Auto-refresh every 30 seconds
setInterval(async () => {
    try {
        const res = await fetch('/api/staff/orders');
        const data = await res.json();
        if (data.success) {
            document.getElementById('pendingCount').textContent = data.pendingCount;
            document.getElementById('pendingBadge').textContent = data.pendingCount;
            document.getElementById('completedCount').textContent = data.completedCount;
            document.getElementById('rejectedCount').textContent = data.rejectedCount;
        }
    } catch (err) {}
}, 30000);

// Close modal on escape
document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
        closeModal('approveModal');
        closeModal('rejectModal');
    }
});
</script>

