<%- include('../partials/header') %>

<div class="staff-page">
    <div class="staff-container">
        <!-- Header -->
        <div class="staff-header">
            <div class="staff-header-left">
                <h1>üìã Orders</h1>
                <p>Manage customer orders</p>
            </div>
            <div class="staff-header-right">
                <div class="live-indicator">
                    <span class="live-dot"></span>
                    <span>Live</span>
                </div>
            </div>
        </div>
        
        <!-- Stats Cards -->
        <div class="stats-row">
            <div class="stat-card pending-card">
                <span class="stat-icon">‚è≥</span>
                <div class="stat-info">
                    <span class="stat-value" id="pendingCount"><%= pendingOrders.length %></span>
                    <span class="stat-label">Pending</span>
                </div>
            </div>
            <div class="stat-card success-card">
                <span class="stat-icon">‚úÖ</span>
                <div class="stat-info">
                    <span class="stat-value" id="completedCount"><%= completedOrders.filter(o => o.status === 'completed').length %></span>
                    <span class="stat-label">Completed</span>
                </div>
            </div>
            <div class="stat-card danger-card">
                <span class="stat-icon">‚ùå</span>
                <div class="stat-info">
                    <span class="stat-value" id="rejectedCount"><%= completedOrders.filter(o => o.status === 'rejected').length %></span>
                    <span class="stat-label">Rejected</span>
                </div>
            </div>
        </div>
        
        <!-- Tabs -->
        <div class="tabs">
            <button class="tab active" data-tab="pending">
                Pending
                <span class="tab-badge" id="pendingBadge"><%= pendingOrders.length %></span>
            </button>
            <button class="tab" data-tab="history">History</button>
        </div>
        
        <!-- Pending Orders -->
        <div class="tab-content active" id="pending-tab">
            <div class="orders-list" id="pendingOrdersList">
                <% if (pendingOrders.length === 0) { %>
                <div class="empty-state" id="emptyPending">
                    <span class="empty-icon">üì≠</span>
                    <h3>No pending orders</h3>
                    <p>New orders will appear here automatically</p>
                </div>
                <% } else { %>
                <% pendingOrders.forEach(order => { %>
                <div class="order-card" data-order-id="<%= order.id %>" data-user-id="<%= order.userId %>">
                    <div class="order-header">
                        <div class="order-product">
                            <img src="<%= order.productImage %>" alt="" class="order-img">
                            <div class="order-details">
                                <span class="order-name"><%= order.productName %></span>
                                <span class="order-id">#<%= order.orderId %></span>
                            </div>
                        </div>
                        <div class="order-price">‚Ç±<%= order.price %></div>
                    </div>
                    <div class="order-body">
                        <div class="order-info-row">
                            <span class="info-label">üë§ Buyer</span>
                            <span class="info-value"><%= order.username %></span>
                        </div>
                        <div class="order-info-row">
                            <span class="info-label">üí≥ Payment</span>
                            <span class="info-value payment-badge <%= order.paymentMethod?.toLowerCase() %>">
                                <%= order.paymentMethod %>
                            </span>
                        </div>
                        <% if (order.paymentProof) { %>
                        <div class="order-info-row">
                            <span class="info-label">üìù Proof</span>
                            <span class="info-value proof"><%= order.paymentProof %></span>
                        </div>
                        <% } %>
                        <div class="order-info-row">
                            <span class="info-label">üïê Time</span>
                            <span class="info-value"><%= new Date(order.createdAt).toLocaleString() %></span>
                        </div>
                    </div>
                    <div class="order-actions">
                        <button class="btn-approve" onclick="openApproveModal('<%= order.id %>', '<%= order.userId %>', '<%= order.productName %>')">
                            <span>‚úì</span> Approve
                        </button>
                        <button class="btn-reject" onclick="openRejectModal('<%= order.id %>', '<%= order.productName %>')">
                            <span>‚úï</span> Reject
                        </button>
                    </div>
                </div>
                <% }) %>
                <% } %>
            </div>
        </div>
        
        <!-- History -->
        <div class="tab-content" id="history-tab">
            <div class="orders-list" id="historyOrdersList">
                <% if (completedOrders.length === 0) { %>
                <div class="empty-state">
                    <span class="empty-icon">üìã</span>
                    <h3>No order history</h3>
                    <p>Completed and rejected orders will appear here</p>
                </div>
                <% } else { %>
                <% completedOrders.slice().reverse().forEach(order => { %>
                <div class="order-card history <%= order.status %>">
                    <div class="order-header">
                        <div class="order-product">
                            <img src="<%= order.productImage %>" alt="" class="order-img">
                            <div class="order-details">
                                <span class="order-name"><%= order.productName %></span>
                                <span class="order-id">#<%= order.orderId %></span>
                            </div>
                        </div>
                        <div class="order-status <%= order.status %>">
                            <%= order.status === 'completed' ? '‚úÖ Approved' : '‚ùå Rejected' %>
                        </div>
                    </div>
                    <div class="order-body compact">
                        <div class="order-info-row">
                            <span class="info-label">Buyer</span>
                            <span class="info-value"><%= order.username %></span>
                        </div>
                        <div class="order-info-row">
                            <span class="info-label">Price</span>
                            <span class="info-value">‚Ç±<%= order.price %></span>
                        </div>
                        <div class="order-info-row">
                            <span class="info-label">By</span>
                            <span class="info-value"><%= order.completedBy || order.rejectedBy %></span>
                        </div>
                    </div>
                </div>
                <% }) %>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Approve Modal -->
<div class="modal" id="approveModal">
    <div class="modal-overlay" onclick="closeModal('approveModal')"></div>
    <div class="modal-box">
        <div class="modal-header">
            <h2>‚úÖ Approve Order</h2>
            <button class="modal-close" onclick="closeModal('approveModal')">&times;</button>
        </div>
        <div class="modal-body">
            <p class="modal-product" id="approveProductName"></p>
            <div class="form-group">
                <label>Product Link / Code *</label>
                <input type="text" id="productLink" placeholder="Enter the product link or code to send...">
                <small>This will be sent to the customer via DM</small>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn-secondary" onclick="closeModal('approveModal')">Cancel</button>
            <button class="btn-primary" id="approveBtn" onclick="submitApproval()">
                <span class="btn-text">Approve & Send</span>
                <span class="btn-loading" style="display:none;">Processing...</span>
            </button>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal" id="rejectModal">
    <div class="modal-overlay" onclick="closeModal('rejectModal')"></div>
    <div class="modal-box">
        <div class="modal-header">
            <h2>‚ùå Reject Order</h2>
            <button class="modal-close" onclick="closeModal('rejectModal')">&times;</button>
        </div>
        <div class="modal-body">
            <p class="modal-product" id="rejectProductName"></p>
            <div class="form-group">
                <label>Reason (optional)</label>
                <textarea id="rejectReason" placeholder="Enter reason for rejection..." rows="3"></textarea>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn-secondary" onclick="closeModal('rejectModal')">Cancel</button>
            <button class="btn-danger" id="rejectBtn" onclick="submitRejection()">
                <span class="btn-text">Reject Order</span>
                <span class="btn-loading" style="display:none;">Processing...</span>
            </button>
        </div>
    </div>
</div>

<!-- Toast Notification -->
<div class="toast" id="toast">
    <span class="toast-icon"></span>
    <span class="toast-message"></span>
