<%- include('./partials/header') %>

<div class="checkout-page">
    <div class="checkout-container">
        <a href="/product/<%= product.id %>" class="back-link">← Back to product</a>
        
        <div class="checkout-grid">
            <!-- Product Summary -->
            <div class="checkout-product">
                <h2>Order Summary</h2>
                <div class="product-card">
                    <img src="<%= product.previewImage %>" alt="<%= product.name %>">
                    <div class="product-info">
                        <h3><%= product.name %></h3>
                        <p><%= product.description %></p>
                    </div>
                    <div class="product-price">
                        <% if (product.originalPrice) { %>
                        <span class="original">₱<%= product.originalPrice %></span>
                        <% } %>
                        <span class="current">₱<%= product.price %></span>
                    </div>
                </div>
                <div class="order-total">
                    <span>Total</span>
                    <span class="total-price">₱<%= product.price %></span>
                </div>
            </div>
            
            <!-- Payment Form -->
            <div class="checkout-payment">
                <h2>Payment Method</h2>
                <form id="checkoutForm">
                    <div class="payment-methods">
                        <% paymentMethods.forEach((method, index) => { %>
                        <label class="payment-option <%= index === 0 ? 'selected' : '' %>">
                            <input type="radio" name="paymentMethod" value="<%= method.id %>" <%= index === 0 ? 'checked' : '' %>>
                            <span class="payment-icon"><%= method.icon %></span>
                            <span class="payment-name"><%= method.name %></span>
                        </label>
                        <% }) %>
                    </div>

                    <div class="payment-details" id="paymentDetails">
                        <div class="payment-info gcash">
                            <h4>GCash Payment</h4>
                            <p>Send payment to: <strong>09XX XXX XXXX</strong></p>
                            <p>Account Name: <strong>Shop Name</strong></p>
                        </div>
                        <div class="payment-info paypal" style="display:none;">
                            <h4>PayPal Payment</h4>
                            <p>Send payment to: <strong>shop@email.com</strong></p>
                        </div>
                        <div class="payment-info bank" style="display:none;">
                            <h4>Bank Transfer</h4>
                            <p>Bank: <strong>BDO / BPI</strong></p>
                            <p>Account Number: <strong>XXXX XXXX XXXX</strong></p>
                            <p>Account Name: <strong>Shop Name</strong></p>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label>Payment Proof (Reference Number / Screenshot URL)</label>
                        <input type="text" name="paymentProof" id="paymentProof" placeholder="Enter reference number or image URL" required>
                        <small>After sending payment, enter the reference number or upload proof</small>
                    </div>
                    
                    <button type="submit" class="btn-checkout" id="submitBtn">
                        <span class="btn-text">Place Order</span>
                        <span class="btn-loading" style="display:none;">Processing...</span>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="successModal">
    <div class="modal-content">
        <div class="success-icon">✅</div>
        <h2>Order Placed!</h2>
        <p>Your order has been submitted. Please wait for staff to verify your payment.</p>
        <p class="order-id">Order ID: <code id="orderId"></code></p>
        <a href="/my-orders" class="btn-primary">View My Orders</a>
    </div>
</div>

<style>
    .checkout-page { padding: 2rem; min-height: calc(100vh - 70px); background: var(--bg-primary); }
    .checkout-container { max-width: 900px; margin: 0 auto; }
    .back-link { display: inline-block; color: var(--text-secondary); margin-bottom: 1.5rem; font-size: 0.9rem; }
    .back-link:hover { color: var(--text-primary); }
    .checkout-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; }
    
    .checkout-product, .checkout-payment { background: var(--bg-card); border: 1px solid var(--border); border-radius: 12px; padding: 1.5rem; }
    .checkout-product h2, .checkout-payment h2 { font-size: 1.1rem; font-weight: 700; margin-bottom: 1.5rem; }
    
    .product-card { display: flex; gap: 1rem; padding-bottom: 1rem; border-bottom: 1px solid var(--border); margin-bottom: 1rem; }
    .product-card img { width: 80px; height: 80px; border-radius: 8px; object-fit: cover; flex-shrink: 0; }
    .product-info { flex: 1; min-width: 0; }
    .product-info h3 { font-size: 1rem; font-weight: 700; margin-bottom: 0.25rem; }
    .product-info p { font-size: 0.85rem; color: var(--text-muted); overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }
    .product-price { text-align: right; flex-shrink: 0; }
    .product-price .original { display: block; text-decoration: line-through; color: var(--text-muted); font-size: 0.85rem; }
    .product-price .current { font-size: 1.25rem; font-weight: 700; color: var(--green); }
    
    .order-total { display: flex; justify-content: space-between; font-size: 1.1rem; font-weight: 700; }
    .total-price { color: var(--green); font-size: 1.5rem; }
    
    .payment-methods { display: flex; flex-direction: column; gap: 0.5rem; margin-bottom: 1.5rem; }
    .payment-option { display: flex; align-items: center; gap: 1rem; padding: 1rem; background: var(--bg-tertiary); border: 2px solid var(--border); border-radius: 8px; cursor: pointer; transition: all 0.2s; }
    .payment-option:hover { border-color: var(--text-muted); }
    .payment-option.selected { border-color: var(--accent); background: var(--accent-glow); }
    .payment-option input { display: none; }
    .payment-icon { font-size: 1.5rem; }
    .payment-name { font-weight: 600; }
    
    .payment-details { background: var(--bg-tertiary); border-radius: 8px; padding: 1rem; margin-bottom: 1.5rem; }
    .payment-info h4 { font-size: 0.9rem; font-weight: 700; margin-bottom: 0.5rem; color: var(--accent); }
    .payment-info p { font-size: 0.85rem; color: var(--text-secondary); margin-bottom: 0.25rem; }
    
    .form-group { margin-bottom: 1.5rem; }
    .form-group label { display: block; font-size: 0.85rem; font-weight: 600; color: var(--text-secondary); margin-bottom: 0.5rem; }
    .form-group input { width: 100%; padding: 0.75rem; background: var(--bg-tertiary); border: 1px solid var(--border); border-radius: 8px; color: var(--text-primary); font-family: inherit; }
    .form-group input:focus { outline: none; border-color: var(--accent); }
    .form-group small { display: block; margin-top: 0.25rem; font-size: 0.75rem; color: var(--text-muted); }
    
    .btn-checkout { width: 100%; padding: 1rem; background: var(--gradient); color: white; font-family: inherit; font-size: 1rem; font-weight: 700; border: none; border-radius: 8px; cursor: pointer; transition: all 0.2s; }
    .btn-checkout:hover { transform: translateY(-2px); box-shadow: 0 10px 30px var(--accent-glow); }
    .btn-checkout:disabled { opacity: 0.6; cursor: not-allowed; transform: none; }
    
    .modal { display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.8); z-index: 1000; align-items: center; justify-content: center; padding: 1rem; }
    .modal.active { display: flex; }
    .modal-content { background: var(--bg-card); border-radius: 16px; padding: 2.5rem; text-align: center; max-width: 400px; width: 100%; }
    .success-icon { font-size: 4rem; margin-bottom: 1rem; }
    .modal-content h2 { font-size: 1.5rem; margin-bottom: 0.5rem; }
    .modal-content p { color: var(--text-secondary); margin-bottom: 1rem; }
    .order-id code { background: var(--bg-tertiary); padding: 0.25rem 0.5rem; border-radius: 4px; }
    .btn-primary { display: inline-block; padding: 0.75rem 1.5rem; background: var(--gradient); color: white; font-weight: 600; border-radius: 8px; margin-top: 1rem; }
    
    @media (max-width: 768px) { 
        .checkout-page { padding: 1.5rem 1rem; }
        .checkout-grid { grid-template-columns: 1fr; gap: 1.5rem; }
        .checkout-product, .checkout-payment { padding: 1.25rem; }
        .product-card { flex-wrap: wrap; }
        .product-card img { width: 60px; height: 60px; }
        .product-price { width: 100%; text-align: left; margin-top: 0.5rem; padding-top: 0.5rem; border-top: 1px solid var(--border); }
        .product-price .current { font-size: 1.1rem; }
        .total-price { font-size: 1.25rem; }
        .payment-option { padding: 0.75rem; }
        .payment-icon { font-size: 1.25rem; }
        .payment-name { font-size: 0.9rem; }
        .modal-content { padding: 1.5rem; }
        .success-icon { font-size: 3rem; }
        .modal-content h2 { font-size: 1.25rem; }
    }
</style>

<script>
    const paymentOptions = document.querySelectorAll('.payment-option');
    const paymentInfos = document.querySelectorAll('.payment-info');
    
    paymentOptions.forEach(opt => {
        opt.addEventListener('click', () => {
            paymentOptions.forEach(o => o.classList.remove('selected'));
            opt.classList.add('selected');
            const method = opt.querySelector('input').value;
            paymentInfos.forEach(info => info.style.display = 'none');
            document.querySelector(`.payment-info.${method}`).style.display = 'block';
        });
    });
    
    document.getElementById('checkoutForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        const btn = document.getElementById('submitBtn');
        btn.disabled = true;
        btn.querySelector('.btn-text').style.display = 'none';
        btn.querySelector('.btn-loading').style.display = 'inline';
        
        const formData = new FormData(e.target);
        const data = { paymentMethod: formData.get('paymentMethod'), paymentProof: formData.get('paymentProof') };
        
        try {
            const res = await fetch('/api/purchase/<%= product.id %>', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify(data) });
            const result = await res.json();
            if (result.success) {
                document.getElementById('orderId').textContent = result.order.orderId;
                document.getElementById('successModal').classList.add('active');
            } else { alert(result.error); }
        } catch { alert('Error placing order'); }
        
        btn.disabled = false;
        btn.querySelector('.btn-text').style.display = 'inline';
        btn.querySelector('.btn-loading').style.display = 'none';
    });
</script>

<%- include('./partials/footer') %>
