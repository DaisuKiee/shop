<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= botName %> - Shop</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* Page Transition */
        .page-transition {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--bg-primary);
            z-index: 9998;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease, visibility 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .page-transition.active {
            opacity: 1;
            visibility: visible;
        }
        .page-spinner {
            width: 40px;
            height: 40px;
            border: 3px solid var(--border);
            border-top-color: var(--accent);
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
    </style>
    <script>
        (function() {
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme) {
                document.documentElement.setAttribute('data-theme', savedTheme);
            } else if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
                document.documentElement.setAttribute('data-theme', 'dark');
            } else {
                document.documentElement.setAttribute('data-theme', 'light');
            }
        })();
    </script>
</head>
<body>
    <!-- Page Transition Overlay -->
    <div class="page-transition" id="pageTransition">
        <div class="page-spinner"></div>
    </div>
    
    <nav class="navbar">
        <div class="nav-container">
            <a href="/" class="nav-logo">
                <img src="<%= botAvatar %>" alt="<%= botName %>">
                <span><%= botName %></span>
            </a>
            <div class="nav-links" id="navLinks">
                <a href="/shop/featured" class="nav-link <%= page === 'featured' ? 'active' : '' %>">Featured</a>
                <a href="/explore" class="nav-link <%= page === 'explore' ? 'active' : '' %>">Browse</a>
                <a href="/shop" class="nav-link <%= page === 'shop' ? 'active' : '' %>">Shop</a>
                
                <!-- Theme Toggle -->
                <button class="theme-toggle" id="themeToggle" title="Toggle theme">
                    <svg class="sun-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="5"/>
                        <path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/>
                    </svg>
                    <svg class="moon-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
                    </svg>
                </button>
                
                <% if (typeof user !== 'undefined' && user) { %>
                <div class="nav-user">
                    <img src="<%= user.avatar %>" alt="<%= user.username %>" class="nav-avatar">
                    <div class="nav-dropdown">
                        <span class="nav-username"><%= user.username %></span>
                        <span class="nav-role <%= user.role %>"><%= user.role %></span>
                        <div class="nav-dropdown-links">
                            <a href="/my-orders">üì¶ My Orders</a>
                            <% if (user.role === 'staff' || user.role === 'admin') { %>
                            <a href="/staff">üìã Staff Panel</a>
                            <% } %>
                            <% if (user.role === 'admin') { %>
                            <a href="/admin">‚öôÔ∏è Admin Panel</a>
                            <% } %>
                            <a href="/auth/logout" class="logout">üö™ Logout</a>
                        </div>
                    </div>
                </div>
                <% } else { %>
                <a href="/login" class="btn btn-outline">Login</a>
                <% } %>
            </div>
            <button class="nav-toggle" id="navToggle" aria-label="Toggle menu">
                <span></span>
                <span></span>
                <span></span>
            </button>
        </div>
    </nav>
    <!-- Mobile Menu Overlay (outside navbar) -->
    <div class="nav-overlay" id="navOverlay"></div>
    <main class="main-wrapper">
